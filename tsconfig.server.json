{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "declaration": false,
      "outDir": "./dist",
      "baseUrl": "./server",
      "rootDir": "server",
      "target": "es2020",
      "lib": ["es2020", "dom"],
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "skipLibCheck": true,
    },
    "include": [
        "server"
    ],
  }